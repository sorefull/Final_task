<% orders.each do |order| %>
  <b>Email:</b> <%= order.user.email %><br>
  <b>Products count:</b> <%= order.products.count %><br>
  <ul>
    <% order.products.each do |product| %>
      <li><%= link_to product.title, product %></li>
    <% end %>
  </ul>
  <% if order.contact_phone %><b>Contact phone:</b> <%= order.contact_phone %><br><% end %>
  <% if order.additional %><b>Additional:</b> <%= order.additional %><br><% end %>
  <b>Total price:</b> <%= order.total_price %><br>
  <%= link_to 'Delete', order, method: :delete, style: 'color:red;' %><br>
<% end %>
