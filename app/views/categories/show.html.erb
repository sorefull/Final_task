<h2><%= @category.title %></h2>
<p>
  <%= @category.description %>
</p>
<% if can? :update, Category %><%= link_to 'Edit category', edit_category_path(@category) %><br><% end %>
<% if can? :delete, Category %><%= link_to 'Delete category', @category, method: :delete, style: 'color:red;', data: { confirm: "Are you sure? This will delete all products of this category!" } %><% end %>
<h3>Products:</h3>
<% @category.products.each do |product| %>
<%= link_to product.title, product %><br>
<% end %>
