<ul>
  <li><%= link_to 'Welcome', welcome_path %></li>
  <li><%= link_to 'All products', products_path %></li>
  <% if user_signed_in? %>
    <li><%= link_to "My cart (#{current_user.order.products.count})", shopping_cart_path %></li>
    <li><%= link_to 'Log out', destroy_user_session_path, method: :delete %></li>
    <li><%= link_to 'All catgories', categories_path %></li>
    <% if current_user.admin? %>
      <li><%= link_to 'New product', new_product_path %></li>
      <li><%= link_to 'New category', new_category_path %></li>
      <li><%= link_to 'Reviews', reviews_products_path %></li>
      <li><%= link_to 'Order Table', orders_path %></li>
    <% end %>
  <% else %>
    <li><%= link_to 'Sign in', new_user_session_path %></li>
    <li><%= link_to 'Sign up', new_user_registration_path %></li>
  <% end %>
</ul>
