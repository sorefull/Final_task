<h2><%= @product.title %></h2>
<%= image_tag @product.image.normal.url %><br>
<%= link_to @product.category.title, @product.category %>
<p>
  <%= @product.description %>
</p>
<h3>Price = <%= @product.price %>$</h3>
<%= link_to 'Edit product', edit_product_path(@product) %><br>
<%= link_to 'Delete product', @product, method: :delete, data: { confirm: "Are you sure?" }, style: 'color:red;' %>
